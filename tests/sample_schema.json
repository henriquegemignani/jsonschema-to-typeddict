{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string",
            "format": "uri"
        },
        "basic_dict": {
            "type": "object",
            "additionalProperties": {
                "type": "string"
            },
            "propertyNames": {
                "$ref": "#/$defs/scenario_name"
            }
        },
        "basic_array": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "something": {
                        "type": "number"
                    }
                }
            }
        },

        "complex_non_total_object": {
            "type": "object",
            "properties": {
                "pickup_type": {
                    "type": "string",
                    "enum": [
                        "actor",
                        "emmi",
                        "corex",
                        "corpius",
                        "cutscene"
                    ]
                }
            },
            "required": [
                "pickup_type"
            ],
            "if": {
                "properties": {
                    "pickup_type": {
                        "const": "actor"
                    }
                }
            },
            "then": {
                "properties": {
                    "model": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "minItems": 1
                    }
                },
                "required": [
                    "model"
                ]
            },
            "else": {
                "properties": {
                    "pickup_lua_callback": {
                        "type": "string"
                    }
                },
                "required": [
                    "pickup_lua_callback"
                ],
                "if": {
                    "not": {
                        "properties": {
                            "pickup_type": {
                                "const": "cutscene"
                            }
                        }
                    }
                },
                "then": {
                    "properties": {
                        "pickup_actordef": {
                            "type": "string",
                            "pattern": "[a-zA-Z0-9_/]+?\\.bmsad"
                        },
                        "pickup_string_key": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "pickup_actordef",
                        "pickup_string_key"
                    ]
                }
            }
        },
        "basic_pattern_properties_dict": {
            "type": "object",
            "patternProperties": {
                "[0-9]+": {
                    "$ref": "#/$defs/scenario_name"
                }
            }
        },
        "complex_dict": {
            "type": "object",
            "patternProperties": {
                "[0-9]+": {
                    "$ref": "#/$defs/scenario_name"
                }
            },
            "propertyNames": {
                "$ref": "#/$defs/scenario_name"
            },
            "additionalProperties": {
                "type": "string"
            }
        },
        "metadata": {
            "type": "object",
            "title": "Title",
            "description": "A description of the schema.",
            "default": {
                "nested_ref": "s010_cave",
                "number": 0,
                "array": [1.0],
                "dict": {"foo": true, "bar": false}
            },
            "examples": [
                {
                    "nested_ref": "s020_magma",
                    "number": 1,
                    "array": [2, 3.4],
                    "dict": {"foo": true, "bar": false}
                }
            ],
            "properties": {
                "string": {
                    "type": "string",
                    "examples": [
                        "s010_cave"
                    ],
                    "maxLength": 15
                },
                "number": {
                    "type": "integer",
                    "default": 0,
                    "minimum": 0,
                    "exclusiveMaximum": 100
                },
                "array": {
                    "type": "array",
                    "items": {
                        "type": "number"
                    },
                    "uniqueItems": true,
                    "minItems": 1
                },
                "dict": {
                    "type": "object",
                    "patternProperties": {
                        ".*": {
                            "type": "boolean"
                        }
                    },
                    "minProperties": 2,
                    "maxProperties": 2
                }
            },
            "required": [
                "string",
                "number",
                "array",
                "dict"
            ]
        },
        "invalid_identifiers": {
            "type": "object",
            "properties": {
                "if": {
                    "type": "boolean"
                },
                "Two Words": {
                    "type": "string"
                },
                "2": {
                    "type": "integer"
                }
            }
        }
    },
    "additionalProperties": false,
    "$defs": {
        "dict_definition": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "nested_ref": {
                    "$ref": "#/$defs/scenario_name"
                },
                "number": {
                    "type": "integer"
                }
            },
            "required": [
                "nested_ref",
                "number"
            ]
        },
        "scenario_name": {
            "type": "string",
            "enum": [
                "s010_cave",
                "s020_magma",
                "s030_baselab",
                "s040_aqua",
                "s050_forest",
                "s060_quarantine",
                "s070_basesanc",
                "s080_shipyard",
                "s090_skybase"
            ]
        },
        "union_enum": {
            "enum": [
                "foo",
                2403,
                12.34,
                null
            ]
        },
        "union_types": {
            "type": ["string", "null"]
        }
    }
}
